<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_body"
        android:background="@drawable/selector_bg_white_to_black_pressed"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="84dp"
            app:srcCompat="@drawable/img_load_before"
            android:id="@+id/history_cover"
            android:adjustViewBounds="false"
            android:padding="5dp"
            android:layout_height="112.7dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="history_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_comic_name"
                    android:textSize="18sp"
                    android:maxLines="1" />

                <TextView
                    android:text="is_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_comic_is_end"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="history_chapterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_comic_chapterName"
                    android:textSize="16sp"
                    android:maxLines="1" />

                <TextView
                    android:text="history_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_comic_page"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <TextView
                android:text="history_comic_readTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/history_comic_readTime"
                android:maxLines="1"
                android:layout_marginRight="5dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/history_line"
        android:layout_below="@+id/history_body"
        android:background="@color/black_pressed"
        android:layout_height="1dp" />

</RelativeLayout>