<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="setting_parent">
    <PreferenceCategory android:title="@string/setting_title_app"
        android:layout="@layout/preference_category_material">
        <Preference
            android:title="@string/setting_sub_title_source"
            android:summary="@string/setting_sub_summary_source"
            android:key="setting_source" />
        <PreferenceScreen
            android:title="@string/setting_sub_title_theme"
            android:summary="@string/setting_sub_summary_theme"
            android:key="setting_theme"
            android:widgetLayout="@layout/preference_enter_button">
        </PreferenceScreen>
        <ljw.comicviewer.ui.preference.MySwitchPreference
            android:defaultValue="false"
            android:title="@string/setting_sub_title_no_splash"
            android:summary="@string/setting_sub_summary_no_splash"
            android:key="noSplash"
            android:id="@+id/setting_splash"/>
        <ljw.comicviewer.ui.preference.MySwitchPreference
            android:defaultValue="false"
            android:title="@string/setting_sub_title_skip_network_hint"
            android:summaryOn="@string/setting_sub_summary_on_skip_network_hint"
            android:summaryOff="@string/setting_sub_summary_off_skip_network_hint"
            android:key="skipNetworkHint"
            android:id="@+id/setting_skip_network_hint"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/setting_title_read"
        android:layout="@layout/preference_category_material">
        <ljw.comicviewer.ui.preference.MySwitchPreference
            android:defaultValue="false"
            android:title="@string/setting_sub_title_use_volume_key"
            android:key="useVolumeKey"
            android:id="@+id/use_volume_key"/>
        <PreferenceScreen
            android:defaultValue="2"
            android:title="@string/setting_sub_title_preload"
            android:summary="@string/setting_sub_summary_preload"
            android:key="preloadPageNumber">
        </PreferenceScreen>
        <PreferenceScreen
            android:title="@string/setting_sub_title_read_mode"
            android:summary="@string/setting_sub_summary_read_mode"
            android:key="readMode">
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/setting_title_storage_cache"
        android:layout="@layout/preference_category_material">
        <ljw.comicviewer.ui.preference.MyTextPreference
            android:title="@string/setting_sub_title_clear_image_cache"
            android:key="clear_image_cache">
        </ljw.comicviewer.ui.preference.MyTextPreference>
    </PreferenceCategory>
</PreferenceScreen>